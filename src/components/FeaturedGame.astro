---
interface Props {
	title: string;
	description: string;
	image: string;
	link: string;
}

const { title, description, image, link } = Astro.props;
---

<div class="game-card">
	<img src={image} alt={title} />
	<div class="content">
		<h3>{title}</h3>
		<p>{description}</p>
		<a href={link} class="play-button">Play Now</a>
	</div>
</div>

<style>
	.game-card {
		background: rgba(0, 0, 0, 0.3);
		border-radius: 0.5rem;
		overflow: hidden;
		transition: transform 0.3s;
		border: 2px solid var(--primary);
	}

	.game-card:hover {
		transform: translateY(-5px);
	}

	.game-card img {
		width: 100%;
		height: 200px;
		object-fit: cover;
	}

	.content {
		padding: 1.5rem;
	}

	h3 {
		font-size: 1.2rem;
		margin: 0 0 1rem 0;
	}

	p {
		margin: 0 0 1.5rem 0;
		line-height: 1.6;
	}

	.play-button {
		display: inline-block;
		background: var(--primary);
		color: white;
		padding: 0.5rem 1rem;
		border-radius: 0.25rem;
		text-decoration: none;
		transition: background 0.3s;
	}

	.play-button:hover {
		background: var(--primary-light);
	}
</style>