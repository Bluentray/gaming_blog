---
interface Props {
	title: string;
	excerpt: string;
	date: string;
	slug: string;
}

const { title, excerpt, date, slug } = Astro.props;
---

<article class="blog-preview">
	<div class="content">
		<h3>{title}</h3>
		<time datetime={date}>{new Date(date).toLocaleDateString('en-US', {
			year: 'numeric',
			month: 'long',
			day: 'numeric'
		})}</time>
		<p>{excerpt}</p>
		<a href={`/blog/${slug}`} class="read-more">Read More â†’</a>
	</div>
</article>

<style>
	.blog-preview {
		background: rgba(0, 0, 0, 0.3);
		border-radius: 0.5rem;
		padding: 1.5rem;
		border: 2px solid var(--primary);
		transition: transform 0.3s;
	}

	.blog-preview:hover {
		transform: translateY(-5px);
	}

	h3 {
		font-size: 1.2rem;
		margin: 0 0 0.5rem 0;
	}

	time {
		display: block;
		color: #94a3b8;
		font-size: 0.9rem;
		margin-bottom: 1rem;
	}

	p {
		margin: 0 0 1.5rem 0;
		line-height: 1.6;
	}

	.read-more {
		color: var(--accent);
		text-decoration: none;
		font-weight: bold;
		transition: color 0.3s;
	}

	.read-more:hover {
		color: var(--primary-light);
	}
</style>