---
import Layout from '../layouts/Layout.astro';
import FeaturedGame from '../components/FeaturedGame.astro';
import BlogPreview from '../components/BlogPreview.astro';

const featuredGames = [
	{
		title: "Coming Soon",
		description: "Exciting web-based games are in development. Stay tuned!",
		image: "/placeholder-game.png",
		link: "#"
	}
];

const latestPosts = [
	{
		title: "Welcome to PixelQuest",
		excerpt: "Embarking on a journey to create and share amazing web-based games.",
		date: "2024-04-17",
		slug: "welcome-to-pixelquest"
	}
];
---

<Layout title="Home">
	<section class="hero">
		<h1>Welcome to PixelQuest</h1>
		<p>Exploring the world of web-based gaming, one pixel at a time.</p>
	</section>

	<section class="featured-games">
		<h2>Featured Games</h2>
		<div class="games-grid">
			{featuredGames.map(game => <FeaturedGame {...game} />)}
		</div>
	</section>

	<section class="latest-posts">
		<h2>Latest Blog Posts</h2>
		<div class="posts-grid">
			{latestPosts.map(post => <BlogPreview {...post} />)}
		</div>
	</section>
</Layout>

<style>
	.hero {
		text-align: center;
		padding: 4rem 0;
		background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), url('/hero-bg.jpg');
		background-size: cover;
		background-position: center;
		border-radius: 1rem;
		margin-bottom: 4rem;
	}

	.hero h1 {
		font-size: 2.5rem;
		margin-bottom: 1rem;
	}

	.hero p {
		font-size: 1.2rem;
		max-width: 600px;
		margin: 0 auto;
	}

	.featured-games, .latest-posts {
		margin-bottom: 4rem;
	}

	.games-grid, .posts-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
		margin-top: 2rem;
	}

	h2 {
		font-size: 1.5rem;
		margin-bottom: 1rem;
	}
</style>