---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="PixelQuest - Web Gaming Blog and Showcase" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | PixelQuest</title>
		<link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&family=Roboto:wght@400;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<header>
			<nav>
				<div class="logo">
					<a href="/">PixelQuest</a>
				</div>
				<ul>
					<li><a href="/games">Games</a></li>
					<li><a href="/blog">Blog</a></li>
					<li><a href="/about">About</a></li>
				</ul>
			</nav>
		</header>
		<main>
			<slot />
		</main>
		<footer>
			<p>&copy; {new Date().getFullYear()} PixelQuest. All rights reserved.</p>
		</footer>
	</body>
</html>
<style is:global>
	:root {
		--primary: #6d28d9;
		--primary-light: #7c3aed;
		--background: #0f172a;
		--text: #e2e8f0;
		--accent: #f59e0b;
	}
	
	html {
		font-family: 'Roboto', system-ui, sans-serif;
		background: var(--background);
		color: var(--text);
	}

	body {
		margin: 0;
		min-height: 100vh;
		display: flex;
		flex-direction: column;
	}

	header {
		background: rgba(0, 0, 0, 0.3);
		padding: 1rem 0;
		border-bottom: 2px solid var(--primary);
	}

	nav {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1rem;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.logo a {
		font-family: 'Press Start 2P', cursive;
		color: var(--accent);
		text-decoration: none;
		font-size: 1.5rem;
	}

	nav ul {
		display: flex;
		gap: 2rem;
		list-style: none;
		margin: 0;
		padding: 0;
	}

	nav a {
		color: var(--text);
		text-decoration: none;
		font-weight: bold;
		transition: color 0.3s;
	}

	nav a:hover {
		color: var(--accent);
	}

	main {
		flex: 1;
		max-width: 1200px;
		margin: 0 auto;
		padding: 2rem 1rem;
		width: 100%;
		box-sizing: border-box;
	}

	footer {
		text-align: center;
		padding: 2rem;
		background: rgba(0, 0, 0, 0.3);
		border-top: 2px solid var(--primary);
	}

	h1, h2, h3 {
		font-family: 'Press Start 2P', cursive;
		color: var(--accent);
	}
</style>